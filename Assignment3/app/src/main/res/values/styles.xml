<resources>

    <color name="custom_theme_color">#29B6F6</color>
    <color name="light_grey">#cccccc</color>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light">
        <!-- Customize your theme here. -->

        <item name="android:textColor">#000000</item>
        <item name="android:typeface">monospace</item>

        <item name="android:windowBackground">@color/custom_theme_color</item>

        <item name="android:listViewStyle">@style/MyListView</item>
        <item name="android:editTextStyle">@style/MyEditText</item>
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="android:buttonStyle">@style/MyButtons</item>

    </style>


    <style name="MyActionBar" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
    <item name="android:background">#009688</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="MyListView" parent="@android:style/Widget.ListView">

        <item name="android:divider">#F06292</item>
        <item name="android:dividerHeight">3dp</item>
        <item name="android:drawSelectorOnTop">false</item>
        <item name="android:cacheColorHint">#00000000</item>
        <item name="android:typeface">serif</item>
        <item name="android:background">@drawable/customlistitemshape</item>
    </style>

    <style name="MyButtons" parent="@android:style/Widget.Holo.Light.Button">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:background">#F06292</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="MyEditText" parent="@android:style/Widget.Holo.Light.EditText">
    <item name="android:textColorHint">#BDBDBD</item>
    <item name="android:background">#FFFFFF</item>
</style>


</resources>
