<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.soddi.assignment1" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.soddi.ChatApp.LoginActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.soddi.ChatApp.MainActivity"
            android:label="@string/title_activity_chat"
            android:parentActivityName="com.soddi.ChatApp.LoginActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.soddi.assignment1.MainActivity" />
        </activity>
        <activity
            android:name="com.soddi.ChatApp.TemplateMenuActivity"
            android:label="@string/title_activity_template_menu" >
        </activity>
    </application>

</manifest>
