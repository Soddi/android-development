<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <!-- Customize your theme here. -->

        <item name="android:typeface">monospace</item>
        <item name="android:textSize">8pt</item>
        <item name="android:textColor">#2196F3</item>
        <item name="android:editTextColor">#FFF000</item>

        <item name="android:actionBarStyle">@style/myActionBar</item>
        <item name="android:buttonStyle">@style/myButtons</item>
        <item name="android:editTextStyle">@style/MyEditTexts</item>
    </style>

    <style name="myActionBar" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <!-- marine blue </-->
        <item name="android:background">#01386a</item>
    </style>

    <style name="myButtons" parent="@android:style/Widget.Holo.Light.Button">
        <item name="android:textColor">#000000</item>
    </style>

    <style name="MyEditTexts" parent="@android:style/Widget.EditText">
        <item name="android:textColor">#000000</item>
    </style>

</resources>
